{
  "name": "Rumia Browser",
  "description": "Um browser simples que pode rodar em p√°ginas web",
  "version": "0.1",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "32": "img/rumia.png"
    }
  },
  "background": {
    "service_worker": "js/touhou.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/*"
      ],
      "matches": [
        "https://atendimento.frasanet.com.br/*",
        "https://youtube.com/*",
        "https://google.com/*",
        "https://music.youtube.com/*",
        "https://spotify.com/*",
        "https://twitter.com/*",
        "https://facebook.com/*",
        "https://discord.com/*",
        "https://twitch.tv/*",
        "https://www.wikipedia.org/*"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ]
}
